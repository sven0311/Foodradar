<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodRadar.Search"
             Title="Search" Icon="round_search_black_18.dp.png">
    <ContentPage.Content>
        <StackLayout Spacing="10" Margin="40, 20">
            <Label Text="What do you feel like?" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            <Label Text="Meal or Category:" VerticalOptions="CenterAndExpand" HorizontalOptions="Start" />
            <Entry Placeholder="..."></Entry>
            <Label Text="Distance:" VerticalOptions="CenterAndExpand" HorizontalOptions="Start" />
            <Slider  Minimum = "0" Maximum="100" MinimumTrackColor="#e21f4f" MaximumTrackColor="#e21f4f"/>
            <Label Text="Price:" VerticalOptions="CenterAndExpand" HorizontalOptions="Start" />
            <Slider  Minimum = "0" Maximum="100" MinimumTrackColor="#e21f4f" MaximumTrackColor="#e21f4f"/>
            <Button Text="Search" BackgroundColor="#e21f4f" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>