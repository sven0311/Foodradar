<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodRadar.SignUpPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="5">
            <StackLayout Orientation="Horizontal">
                <Entry x:Name ="FirstName" Placeholder="First Name"></Entry>
                <Entry x:Name="LastName" Placeholder="Last Name"></Entry>
            </StackLayout>
            <Entry x:Name ="Email" Placeholder="Email"></Entry>
            <Entry x:Name ="Password" Placeholder="Password" PlaceholderColor="#bababa" FontSize="16"  IsPassword="True"></Entry>
            <Entry x:Name ="ConfirmPassword" Placeholder="Confirm Password" PlaceholderColor="#bababa" FontSize="16"  IsPassword="True"></Entry>
            <StackLayout Orientation="Horizontal">
                <Label Text="Save Password"></Label>
                <Switch IsToggled="False"></Switch>
            </StackLayout>
            <Button Text="Sign Up" BackgroundColor="Red" Clicked ="Button_ok" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>