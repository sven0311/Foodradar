<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FoodRadar.ViewModels"
             x:Class="FoodRadar.ProfileDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.BindingContext>
                <local:ProfileDetailViewModel/>
            </StackLayout.BindingContext>


            <Label Text="Profile Details"  FontSize="Medium"  HorizontalOptions="CenterAndExpand" Margin="10, 15"/>


            <Label Text="{Binding FirstName}"  FontSize="Default"  HorizontalTextAlignment="Start" Margin="30, 5"/>

            <Label Text="{Binding LastName}"  FontSize="Default" HorizontalTextAlignment="Start" Margin="30, 5"/>

            <Label Text="{Binding Email}"  FontSize="Default" HorizontalTextAlignment="Start"  Margin="30, 5"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>